@model ExamenFabianAhumada.Data.Ubicacion

@{
    ViewData["Title"] = "Eliminar Ubicación";
}

<h1 class="mt-4 mb-4">Eliminar Ubicación</h1>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<div class="card">
    <div class="card-header">
        Confirmación de Eliminación
    </div>
    <div class="card-body">
        <h5 class="card-title">¿Estás seguro de que deseas eliminar esta ubicación?</h5>
        <p class="card-text">
            <strong>Nombre:</strong> @Model.Nombre
        </p>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
            Eliminar
        </button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</div>

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                ¿Estás seguro de que deseas eliminar la ubicación "<strong>@Model.Nombre</strong>"? Esta acción no se puede deshacer.
            </div>
            <div class="modal-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-image: url('/Imagenes/Ubicacion.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        height: 100vh;
        overflow: hidden;
    }
</style>