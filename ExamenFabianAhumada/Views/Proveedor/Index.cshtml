@model IEnumerable<ExamenFabianAhumada.Data.Proveedor>

@{
    ViewData["Title"] = "Index";
    var ubicaciones = ViewBag.Ubicaciones as Dictionary<int, string>; // Convierte el ViewBag en diccionario
}

    <div class="container py-5">
        <div class="row">
            <div class="col-12 text-center mb-4">
                <h1 class="text-white">Listado de Proveedores</h1>
                <a asp-action="Create" class="btn btn-success btn-lg">Crear Nuevo Proveedor</a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-hover shadow-lg bg-white">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Rut)</th>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>Ubicación</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Rut)</td>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@ubicaciones[item.UbicacionId]</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-image: url('/Imagenes/proveedoress.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        height: 100vh;
        overflow: hidden;
    }

    .table {
        background-color: #ffffff;
    }

    .table-hover tbody tr:hover {
        background-color: #f0f0f5;
    }

    .thead-dark th {
        background-color: #343a40;
        color: #ffffff;
    }

    .btn {
        margin: 0 5px;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: 600;
    }
</style>
