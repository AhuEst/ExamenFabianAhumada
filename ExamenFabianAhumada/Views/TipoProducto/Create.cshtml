@model ExamenFabianAhumada.Data.TipoProducto

@{
    ViewData["Title"] = "Crear Tipo de Producto";
}

<div class="container mt-4">
    <h2 class="text-center">Crear Tipo de Producto</h2>
    <div class="table-responsive bg-light p-4 shadow rounded">
        <form asp-action="Create">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th class="text-end align-middle">Nombre</th>
                        <td>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="text-end align-middle">Descripción</th>
                        <td>
                            <input asp-for="Descripcion" class="form-control" placeholder="Ingrese la descripción" />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="text-end align-middle">Estado</th>
                        <td>
                            <select asp-for="Estado" class="form-select">
                                <option value="Disponible">Disponible</option>
                                <option value="No disponible">No disponible</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center">
                <a asp-action="Index" class="btn btn-secondary me-2">Volver</a>
                <button type="submit" class="btn btn-primary">Crear</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const forms = document.querySelectorAll("form");
            forms.forEach(form => {
                form.addEventListener("submit", function (event) {
                    const confirmed = confirm("¿Estás seguro de que deseas realizar esta acción?");
                    if (!confirmed) {
                        event.preventDefault();
                    }
                });
            });

            const deleteButtons = document.querySelectorAll(".btn-delete");
            deleteButtons.forEach(button => {
                button.addEventListener("click", function (event) {
                    const confirmed = confirm("¿Estás seguro de que deseas eliminar este registro?");
                    if (!confirmed) {
                        event.preventDefault();
                    }
                });
            });
        });
    </script>
}

